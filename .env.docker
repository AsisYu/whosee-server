# Docker Compose 环境变量配置文件
# 复制此文件为 .env 并填入实际的配置值

# ===========================================
#  API密钥配置（必需）
# ===========================================
WHOISXML_API_KEY=your_whoisxml_api_key_here
WHOISFREAKS_API_KEY=your_whoisfreaks_api_key_here
API_KEY=your_strong_api_key_here
JWT_SECRET=your_strong_jwt_secret_here

# ===========================================
#  安全配置
# ===========================================
# 是否禁用API安全验证（生产环境建议设为false）
DISABLE_API_SECURITY=false

# IP白名单严格模式（true=只允许白名单IP，false=白名单或API密钥任一通过即可）
IP_WHITELIST_STRICT_MODE=false

# API开发模式（生产环境建议设为false）
API_DEV_MODE=false

# 受信任的IP列表（逗号分隔，留空表示不限制）
TRUSTED_IPS=

# ===========================================
# 🗄️ Redis配置
# ===========================================
# Redis密码（可选，留空表示无密码）
REDIS_PASSWORD=

# ===========================================
#  Chrome配置
# ===========================================
# Chrome运行模式（auto=智能混合模式，cold=冷启动，warm=热启动）
CHROME_MODE=auto

# ===========================================
#  健康检查配置
# ===========================================
# 健康检查间隔天数
HEALTH_CHECK_INTERVAL_DAYS=1

# 是否将健康检查日志分离到独立文件
HEALTH_LOG_SEPARATE=false

# 是否在主日志中静默健康检查信息
HEALTH_LOG_SILENT=false

# ===========================================
#  生产环境建议配置
# ===========================================
# DISABLE_API_SECURITY=false
# IP_WHITELIST_STRICT_MODE=false
# API_DEV_MODE=false
# CHROME_MODE=auto
# HEALTH_LOG_SEPARATE=true
# HEALTH_LOG_SILENT=true